@page
@*@model global::AspNetCoreDataSource.Pages.MoviesModel*@
@{
    ViewData["Title"] = "Movies";
}

<h2>Movies</h2>

<kendo-grid name="grid">
    <datasource type="DataSourceTagHelperType.Ajax" server-operation="false">
        <transport>
            <read url="/api/movies" type="GET" />
            <update url="/api/movies/update" type="PUT" />
            <destroy url="/api/movies/delete" type="DELETE" />
        </transport>
        <schema>
            <model id="Id"></model>
        </schema>
    </datasource>
    <groupable enabled="true" />
    <sortable enabled="true" />
    <pageable refresh="true" page-size="5"/>
    <columns>
        <column field="Title" title="Movie title" />
        <column field="ReleaseDate" title="Release date" />
        <column field="Genre" title="Genre" />
        <column field="Rating" title="Rating" width="100" />
    </columns>
</kendo-grid>
