@page
@model KendoTest.Pages.MoviesModel
@{
    ViewData["Title"] = "Movies";
}

<div class="breadcrumb">
    <span class="label-primary">
        <a href="/movies">movies</a>
    </span>
    <span class="separator">/</span>
</div>

<h2>Movies</h2>

<kendo-grid name="grid">
    <datasource type="DataSourceTagHelperType.Ajax" server-operation="false">
        <transport>
            <read url="/api/movies" type="GET" />
            <update url="/api/movies/update" type="PUT" />
            <destroy url="/api/movies/delete" type="DELETE" />
        </transport>
        <schema>
            <model id="Id"></model>
        </schema>
    </datasource>
    <groupable enabled="true" />
    <sortable enabled="true" />
    <editable enabled="true" mode="popup" />
    <pageable refresh="true" />
    <columns>
        <column field="Title" title="Movie Title"></column>
        <column field="ReleaseDate" title="Release Date" />
        <column field="Genre" title="Genre" />
        <column field="Rating" title="Rating" width="50" />
        <column>
            <commands>
                <column-command text="Edit" name="edit"></column-command>
                <column-command text="Delete" name="destroy"></column-command>
            </commands>
        </column>
    </columns>
</kendo-grid>

